      	</jaxws:outFaultInterceptors>        
        <jaxws:properties>
            <entry key="mtom-enabled" value="${webservice.mtom}" />
        </jaxws:properties>
    </jaxws:endpoint>
    <jaxws:endpoint id="system"
        implementor="com.logicaldoc.webservice.soap.endpoint.SoapSystemService"
        address="/System">
        <jaxws:inInterceptors>
            <ref bean="WebserviceInterceptor" />
        </jaxws:inInterceptors>      
      	<jaxws:outFaultInterceptors>
         	<ref bean="WebserviceFaultInterceptor" />
      	</jaxws:outFaultInterceptors>
        <jaxws:properties>
            <entry key="mtom-enabled" value="${webservice.mtom}" />
        </jaxws:properties>
    </jaxws:endpoint>
    <jaxws:endpoint id="security"
        implementor="com.logicaldoc.webservice.soap.endpoint.SoapSecurityService"
        address="/Security">
        <jaxws:inInterceptors>
            <ref bean="WebserviceInterceptor" />
        </jaxws:inInterceptors>
      	<jaxws:outFaultInterceptors>
         	<ref bean="WebserviceFaultInterceptor" />
      	</jaxws:outFaultInterceptors>          
        <jaxws:properties>
            <entry key="mtom-enabled" value="${webservice.mtom}" />
        </jaxws:properties>
    </jaxws:endpoint>
	<jaxws:endpoint id="documentMetadata"
		implementor="com.logicaldoc.webservice.soap.endpoint.SoapDocumentMetadataService"
		address="/DocumentMetadata">
        <jaxws:inInterceptors>
            <ref bean="WebserviceInterceptor" />
        </jaxws:inInterceptors>
        <jaxws:outFaultInterceptors>
           <ref bean="WebserviceFaultInterceptor" />
        </jaxws:outFaultInterceptors>        
		<jaxws:properties>
			<entry key="mtom-enabled" value="${webservice.mtom}" />
		</jaxws:properties>
	</jaxws:endpoint>    
    
    <!-- ############################## -->
    <!-- ###### JAX-RS (RESTful) ###### -->
    <!-- ############################## -->

    <!-- to support Java-to-JSON and vice-versa conversion -->    
    <!-- JAXRS providers -->
 
<bean id="cxfJsonProvider" class="org.apache.cxf.jaxrs.provider.json.JSONProvider">
     <property name="dropRootElement" value="true" /> 
     <property name="supportUnwrapped" value="true" /> 
</bean>
 
<bean id="jacksonJsonProvider" class="com.fasterxml.jackson.jakarta.rs.json.JacksonJsonProvider" />
    
    <jaxrs:server id="commentservice" address="/mobile/comments">
        <jaxrs:inInterceptors>
            <ref bean="WebserviceInterceptor" />
        </jaxrs:inInterceptors> 
        <jaxrs:outFaultInterceptors>
            <ref bean="WebserviceFaultInterceptor" />
        </jaxrs:outFaultInterceptors>            
        <jaxrs:serviceBeans>
            <bean class="com.logicaldoc.webservice.mobile.CommentService" />
        </jaxrs:serviceBeans>
        <jaxrs:providers>
		    <!-- Put JSONProvider FIRST so it wins for JAXB objects -->
		    <ref bean="cxfJsonProvider"/>		    
		    <!-- Put Jackson SECOND so it still handles primitives -->
			<ref bean="jacksonJsonProvider"/>	
        </jaxrs:providers>
    </jaxrs:server>
    
    <!-- REST Web-services  -->
    <jaxrs:server id="restAuth" address="/rest/auth">
        <jaxrs:inInterceptors>
            <ref bean="WebserviceInterceptor" />
        </jaxrs:inInterceptors>
        <jaxrs:outFaultInterceptors>
            <ref bean="WebserviceFaultInterceptor" />
        </jaxrs:outFaultInterceptors>         
        <jaxrs:serviceBeans>
            <bean class="com.logicaldoc.webservice.rest.endpoint.RestAuthService">
                <aop:scoped-proxy />
            </bean>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
		    <ref bean="cxfJsonProvider"/>		    
			<ref bean="jacksonJsonProvider"/>	
        </jaxrs:providers>
    </jaxrs:server>

