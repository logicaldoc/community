        address="/Bookmark">
        <jaxws:inInterceptors>
            <ref bean="GZIPInInterceptor" />
            <ref bean="WebserviceInterceptor" />
        </jaxws:inInterceptors>
        <jaxws:outInterceptors>
            <ref bean="GZIPOutInterceptor" />
        </jaxws:outInterceptors>
      	<jaxws:outFaultInterceptors>
