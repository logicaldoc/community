<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>plugin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>WEB-INF/lib</outputDirectory>
			<includes>
				<include>com.onlyoffice:*</include>
				<include>com.fasterxml.jackson.core:*</include>
				<include>com.auth0:*</include>
				<!-- opzionale, solo per la verifica dei token jwt (protezione dei documenti) -->
				<include>com.fasterxml.jackson.dataformat:*</include>		
				<include>org.json:*</include>
				<include>com.inversoft:*</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>src/main/resources/</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>plugin.xml</include>
			</includes>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
        <fileSet>
            <directory>src/main/webapp/onlyoffice</directory>
            <outputDirectory>onlyoffice</outputDirectory>
        </fileSet>		
	</fileSets>
</assembly>
