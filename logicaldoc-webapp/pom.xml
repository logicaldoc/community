										includes="gwt-user*,smartgwt-skin*,logicaldoc-webapp*,gwtevent*,guava-14*,guava-16*,log4j-1.*,slf4j-simple*" />
								</delete>
								<copy
									file="src/main/resources/context.properties"
									tofile="target/war/WEB-INF/classes/context.properties"
									overwrite="true" />
								<unzip dest="target/war">
									<fileset dir="target/war">
										<include name="*-plugin.zip" />
									</fileset>
								</unzip>
								<delete>
									<fileset dir="target/war">
										<include name="*-plugin.zip" />
