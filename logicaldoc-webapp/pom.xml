				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>package</id>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<unzip
									src="target/${project.artifactId}-${project.version}.war"
									dest="target/war" />
								<delete
									dir="target/war/WEB-INF/classes/com/logicaldoc/gui" />
								<delete dir="target/war/work" />
								<delete dir="target/war/META-INF" />
								<delete>
									<fileset dir="target/war/WEB-INF/lib"
										includes="gwt-user*,smartgwt-skin*,logicaldoc-webapp*,gwtevent*,guava-14*,guava-16*,log4j-1.*,slf4j-simple*" />
								</delete>
								<copy file="src/main/resources/context.properties"
									tofile="target/war/WEB-INF/classes/context.properties"
									overwrite="true" />
								<unzip dest="target/war">
									<fileset dir="target/war">
										<include name="*-plugin.zip" />
									</fileset>
								</unzip>
								<delete>
									<fileset dir="target/war">
										<include name="*-plugin.zip" />
									</fileset>
								</delete>

								<!-- Remove the manifest file in the bcmail jar to avoid cyclic dependencies, 
									but after dropping the support to SMBv1 this will be no more required -->
								<unzip src="target/war/WEB-INF/lib/bcmail-jdk16-1.46.jar"
									dest="target/war/WEB-INF/lib/bcmail" />
								<delete dir="target/war/WEB-INF/lib/bcmail/META-INF"
									quiet="true" />
								<zip destfile="target/war/WEB-INF/lib/bcmail-jdk16-1.46.jar"
									basedir="target/war/WEB-INF/lib/bcmail" />
								<delete dir="target/war/WEB-INF/lib/bcmail" quiet="true" />

								<zip
									destfile="target/${project.artifactId}-${project.version}.war"
									basedir="target/war" />
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<excludes>**/.svnignore</excludes>
					<excludes>WEB-INF/classes/**</excludes>
					<excludes>WEB-INF/lib/*.jar</excludes>
					<archive>
						<addMavenDescriptor>false</addMavenDescriptor>
					</archive>
				</configuration>
			</plugin>
